function mdl_custom_block_info() {
   $blocks['current_status'] = array(
    'info' => t('Current Status'), 
    'cache' => DRUPAL_NO_CACHE,
  );
  return $blocks;
}
function mdl_custom_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'current_status':
      $block['subject'] = t('Current Status');
      $block['content'] = current_status_chart();
      break;

  }
  return $block;
}
